---
import Input from "../mini/input.astro"

interface Props {
  loading: boolean
  title?: string
  location?: string
  date?: string
  description?: string
}

const { loading, title, location, date, description } = Astro.props
---
<Input name="title" title="Title" class="w-full rounded-sm dark:bg-gray-800" type="text" value={title} loading={loading}></Input>
<Input name="location" title="Where" class="w-full rounded-sm dark:bg-gray-800" type="text" value={location} loading={loading}></Input>
<Input name="date" title="When" class="w-full rounded-sm dark:bg-gray-800" type="text" value={date} loading={loading}></Input>
<Input name="description" title="Description" class="w-full rounded-sm dark:bg-gray-800" type="text" value={description} loading={loading}></Input>
