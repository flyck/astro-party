---
import Modal from "../../layouts/Modal.astro";
import Input from "../mini/input.astro";
import SubmitButton from "../submitButton.astro";

interface Props {
  buttonId: string;
}

const { buttonId } = Astro.props;
---
<Modal title="Create Participant" openModalId={buttonId}>
  <form
    hx-post="/server/participant/create"
    hx-swap="none"
  >
    <Input class="rounded-t-lg" name="name" title="Name" value="Johnny B" autofocus={true} validateUrl="/server/participant/validate" />
    <Input name="email" title="Email" value="john@john.de" validateUrl="/server/participant/validate" />
    <SubmitButton>Ok</SubmitButton>
  <form>
</Modal>
