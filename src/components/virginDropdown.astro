---
interface Props {
  class?: string;
  assignees: { id: number; name: string }[];
  mainId?: string;
  selectId?: string;
}

const { class: className, assignees, mainId, selectId } = Astro.props;
---
<div class="border-b border-gray-500 p-2" id={mainId}>
  <div class="text-sm">Assignee:</div>
  <select name="assignee" id={selectId}
          class="w-full px-2 text-sm rounded dark:bg-gray-800 text-gray-800 dark:text-gray-100 bg-white hover:border-gray-400">
    <option value="">Nobody</option>
    {assignees.map((assignee) => 
        <option value={assignee.id}>{assignee.name}</option>
    )}
  </select>
</div>
