---
import Modal from  "../../layouts/Modal.astro"
import Input from "../mini/input.astro"
import SubmitButton from "../submitButton.astro"

interface Props {
  buttonId: string
}

const { buttonId } = Astro.props;
---
<Modal title="Create Participant" buttonId={buttonId}>
    <form
      hx-post="/server/participant/create"
      hx-swap="none"
    >
        <Input name="name" title="Name" type="text" value="Johnny B"></Input>
        <Input name="email" title="Email" type="text" value="john@john.de"></Input>
        <SubmitButton>Ok</SubmitButton>
    <form>
</Modal>
